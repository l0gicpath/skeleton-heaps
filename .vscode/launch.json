    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "file://${workspaceFolder}/export/webroot/index.html",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Haxe: Build"
        },

        {
            "name": "HashLink Debug",
            "request": "launch",
            "type": "hl",
            "cwd": "${workspaceFolder}",
            "program": "export/main.hl",
            "preLaunchTask": "Haxe: Build"
        }
    ]
}